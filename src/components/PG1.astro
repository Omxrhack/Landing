---
import Contador from "./Contador.astro";
---

<div id="container">
  <main>
    <section id="sec-der">
      <div id="sec-der-div">
        <div>
          <h1>CATWAY</h1>
        </div>
        <div>
          <p>𝑅𝑢𝑛𝑤𝑎𝑦 𝐶𝑜𝑎𝑐ℎ 𝑏𝑦 𝐾𝑒𝑛𝑡𝑖𝑎 𝐵𝑜𝑗𝑜𝑟𝑞𝑢𝑒𝑧</p>
        </div>
        <div id="slot-contador">
          <p><Contador /></p>
        </div>
      </div>
    </section>
    <section id="sec-izq">
      <div>
        <img src="/src/assets/MGCLKN.png" alt="KENTIA - MODELO" />
      </div>
    </section>
  </main>
</div>

<style>
  #container {
    height: 100%;
  }
  h1 {
    margin: 0px;
  }
  p {
    margin: 0px;
  }
  img {
    width: 45rem;
    height: 50rem;
    position: absolute;
    top: 0%;
    left: 45%;
    object-fit: cover;
    display: grid;
    filter: drop-shadow(0 0 13px rgba(0, 0, 0, 0.5));
  }
  main {
    height: 100%;
    display: flex;
    gap: 7rem;
    justify-content: center;
  }
  #slot-contador {
    margin-top: 3rem;
    margin-bottom: 3rem;
  }

  #sec-der {
    align-self: center;
    height: inherit;
    width: -webkit-fill-available;
    align-content: center;
    justify-content: left;
    left: 10%;
  }
  #sec-der-div {
    padding-left: 13rem;
  }

  #sec-izq {
    display: flex;
    align-items: start;
    flex-direction: column;
    justify-content: center;
  }
</style>
